<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <style>
        .login{
            background-color: #948979;
        }
        .login:hover{
            background-color: #DFD0B8;
        }
    </style>
<div class="vh-100 d-flex justify-content-center align-items-center" style="background:linear-gradient(to right bottom,#948979,#948979); ; background-repeat: no-repeat; background-size: cover;">

  <div  class="p-5 bg-light border rounded shadow border border-5 border-dark" style="background:linear-gradient(to right bottom,#DFD0B8 ,#DFD0B8  ,#DFD0B8); ; background-repeat: no-repeat; background-size: cover;">
    <h1 style="color: 222831; font-family: fantasy;" class="d-flex justify-content-center"><p>LOGIN PAGE</p></h1>

    <% if(msg) {%>
    <h4 class="text-danger"><%=msg%></h4>
    <%}%>

    <form action="/home" method="post">
        

        <div class="py-5">
            <label for="" style="color: #393E46; font-family: revert-layer;"><b>USERNAME&nbsp;&nbsp;</b></label>
            <input type="text" name="username" placeholder="Username">
        </div>

        <div class="">
            <label for="" style="color: #393E46; font-family: revert-layer;"><b>PASSWORD&nbsp;&nbsp;</b></label>
            <input type="password" name="password" placeholder="password">
        </div>

        <div class="d-flex justify-content-center pt-5 " >
        <button type="submit" class="login px-5 py-2" ><b>LOGIN</b></button>
        </div>
    </form>
  </div>

</div>